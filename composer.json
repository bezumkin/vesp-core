{
    "name": "vesp/core",
    "type": "library",
    "license": "MIT",
    "description": "Vesp core library to make backend simple",
    "authors": [
        {
            "name": "Vasily Naumkin",
            "email": "bezumkin@yandex.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "Vesp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vesp\\CoreTests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "firebase/php-jwt": "^v5.5.1",
        "illuminate/database": "^v8.79.0",
        "illuminate/events": "^v8.79.0",
        "league/flysystem": "^2.4",
        "league/glide": "^2.2",
        "php-di/slim-bridge": "^3.2.0",
        "robmorgan/phinx": "^0.13.4",
        "slim/psr7": "^1.3.0",
        "slim/slim": "^4.9.0",
        "symfony/dotenv": "^5.4"
    },
    "require-dev": {
        "itsgoingd/clockwork": "^5.1",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpunit/phpunit": "^9.5",
        "rregeer/phpunit-coverage-check": "^0.3",
        "php-coveralls/php-coveralls": "^2.5",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "suggest": {
        "itsgoingd/clockwork": "Debug requests with built-in middleware"
    },
    "scripts": {
        "phpunit": "vendor/bin/phpunit -c ./tests/phpunit.xml",
        "cs-check": "vendor/bin/phpcs --colors -p",
        "cs-fix": "vendor/bin/phpcbf --colors -p",
        "test-text": "XDEBUG_MODE=coverage vendor/bin/phpunit -c ./tests/phpunit.xml --coverage-text",
        "test-html": "XDEBUG_MODE=coverage vendor/bin/phpunit -c ./tests/phpunit.xml --coverage-html=report",
        "test-clover": "XDEBUG_MODE=coverage vendor/bin/phpunit -c ./tests/phpunit.xml --coverage-clover=clover.xml --whitelist=./src/",
        "coveralls": "vendor/bin/php-coveralls --coverage_clover=clover.xml -v -o coveralls-upload.json",
        "test": [
            "@test-text",
            "@cs-fix"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
