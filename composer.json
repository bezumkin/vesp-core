{
  "name": "vesp/core",
  "type": "library",
  "description": "",
  "authors": [
    {
      "name": "Vasily Naumkin",
      "email": "bezumkin@yandex.ru"
    }
  ],
  "autoload": {
    "psr-4": {
      "Vesp\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Vesp\\Tests\\": "tests/"
    }
  },
  "require": {
    "slim/slim": "^4.4",
    "slim/psr7": "^1.0",
    "illuminate/database": "^7.4",
    "illuminate/events": "^7.4",
    "robmorgan/phinx": "^0.11.4",
    "symfony/dotenv": "^5.0",
    "php-di/slim-bridge": "^3.0",
    "firebase/php-jwt": "^5.2",
    "league/flysystem": "^1.0",
    "league/glide": "^1.5",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.1",
    "squizlabs/php_codesniffer": "^3.5",
    "rregeer/phpunit-coverage-check": "^0.3.1"
  },
  "scripts": {
    "phpunit": "phpunit --configuration ./tests/phpunit.xml",
    "cs-check": "phpcs --colors -p --standard=PSR12 src/ tests/",
    "cs-fix": "phpcbf --colors -p --standard=PSR12 src/ tests/",
    "test-coverage-text": "phpunit --configuration ./tests/phpunit.xml --coverage-text",
    "test-coverage-html": "phpunit --configuration ./tests/phpunit.xml --coverage-html ./report",
    "test": [
      "@test-coverage-text",
      "@cs-fix"
    ]
  }
}
